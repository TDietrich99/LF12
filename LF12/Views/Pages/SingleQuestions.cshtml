@model LF12.Classes.Models.SingleQuestionsModel

@{
    ViewData["Title"] = "Kreuzworträtsel-Lösung";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4">Riddle-Riddler</h1>
            <p class="lead">Geben Sie die Frage und die Länge der Antwort ein, um die Lösung zu finden.</p>

            @if (!string.IsNullOrEmpty(Model.Answer))
            {
                <div class="alert alert-success mt-4">
                    <strong>Lösung:</strong> @Model.Answer
                </div>
            }

            <form method="post" asp-controller="Home" asp-action="SolveRiddle" id="riddleForm" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group mt-3">
                    <label for="Question" class="form-label">Frage für das Kreuzworträtsel:</label>
                    <input type="text" id="Question" name="Question" class="form-control form-control-lg rounded-pill" placeholder="Geben Sie Ihre Frage ein" value="@Model.Question" required>
                </div>

                <div class="form-group mt-3">
                    <label for="AnswerLength" class="form-label">Anzahl der Buchstaben der Lösung:</label>
                    <input type="number" id="AnswerLength" name="AnswerLength" class="form-control form-control-lg rounded-pill" min="1" max="20" placeholder="Buchstabenanzahl" value="@Model.AnswerLength" required>
                </div>

                <button type="submit" class="btn btn-success btn-lg rounded-pill mt-4 w-100">Lösung anzeigen</button>
            </form>
        </div>
    </div>
</div>
